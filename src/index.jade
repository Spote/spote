doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    base(href="/")
    title Spote
    link(href="/vendor/animate.css", rel="stylesheet")
    link(href="/app.css", rel="stylesheet")
    script(src="/vendor/angular.js")
    script(src="/vendor/angular-animate.js")
    script(src="/vendor/angular-ui-router.js")
    script(src="/vendor/log-ex-unobtrusive.js")
    script(src="/vendor/ct-ui-router-extras.js")
    script(src="/vendor/traceur-runtime.js")
    script(src="/vendor/es6-module-loader.js")
    script(src="/vendor/system.js")
  body(ng-controller="AppController")
    .top-navigation
      nav.ink-navigation.ink-grid
        ul.menu.horizontal.black
          li
            a(href="/") Spote
    .page-content.fade-animation(ui-view)
    script.
      System.import('app').then(function() {
        angular.bootstrap(document, ['app']);
      }).catch(console.error.bind(console));
